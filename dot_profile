mkcd () {
	mkdir "$1"
	cd "$1"
}

czu () {
	cd .local/share/chezmoi
	git add .
	git commit -m "$1"
	git push
	cd $HOME
}

wcr () {
	wc -l `find "$1" -type f` | tail -n 1
}

ssh-add $HOME/OneDrive/Documentos/private/ssh/id_ed25519 2> /dev/null
