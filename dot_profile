# Android setup
export ANDROID_HOME=$HOME/android-sdk
export ANDROID_SDK_ROOT=$HOME/android-sdk

# Java setup
export JAVA_HOME=/usr/lib/jvm/java-17-openjdk

# System vars setup
export PATH=$PATH:$ANDROID_HOME/platform-tools:$HOME/.cargo/bin:$HOME/.pub-cache/bin

# Chrome setup
export CHROME_EXECUTABLE=google-chrome-stable

# DE/WM setup
export QT_QPA_PLATFORM=wayland
export XDG_CURRENT_DESKTOP=KDE

# SSH setup
export SSH_KEY_LOCATION="$HOME/OneDrive/Documentos/private/ssh/id_ed25519"
export SSH_KEY_LOCATION_FALLBACK="$HOME/.ssh/id_ed25519"

# OS/Environment setup
export EDITOR=nvim
export CLEAR=clear


